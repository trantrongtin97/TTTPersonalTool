@inherits InputBase<double?>

<label for="autoinputdouble">@DisplayName</label>
<input type="number" @bind="@CurrentValue" class="form-control dark-theme-textbox" id="autoinputdouble" />
<ValidationMessage For=@ValueExpression />
<br />

@code {
    protected override bool TryParseValueFromString(string? value, out double? result, out string validationErrorMessage)
    {
        result = double.Parse(value);
        validationErrorMessage = null;
        return true;
    }
}